<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shareyacht.shareyacht">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShareYacht"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.YachtDetailActivity" />
        <activity android:name=".view.AddYachtActivity" />
        <activity android:name=".view.OwnerActivity" />
        <activity android:name=".view.ReservationActivity" />
        <activity android:name=".view.QrViewActivity" />
        <activity android:name=".view.user.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MainActivity" />
    </application>

</manifest>